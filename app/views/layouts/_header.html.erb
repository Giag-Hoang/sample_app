<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("app.views.layouts.header.sample_app"), home_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t(".english"), locale: :en %></li>
        <li><%= link_to t(".vietnamese"), locale: :vi %></li>
        <li><%= link_to t("app.views.layouts.header.home"), home_path %></li>
        <li><%= link_to t("app.views.layouts.header.help"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("app.views.layouts.header.users"), users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t("app.views.layouts.header.account") %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("app.views.layouts.header.profile"), current_user %></li>
              <li><%= link_to t("app.views.layouts.header.settings"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("app.views.layouts.header.logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("app.views.layouts.header.login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>

<% provide :title, t("app.views.sessions.new.title") %>
<h1><%= t("app.views.sessions.new.content") %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :session, url: login_path do |f| %>
      <%= f.label :email, t("app.views.sessions.new.email") %>
      <%= f.email_field :email, class: "form-control" %>
      <%= f.label :password, t("app.views.sessions.new.password") %>
      <%= f.password_field :password, class: "form-control" %>
      <%= f.submit t("app.views.sessions.new.submit"), class: "btn btn-primary" %>
    <% end %>
    <p><%= t("app.views.sessions.new.new_user") %><%= link_to t("app.views.sessions.new.sign_up_now"), signup_path %></p>
  </div>
</div>

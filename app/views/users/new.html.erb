<% provide :title, t("app.views.users.new.title") %>
<h1><%= t("app.views.users.new.title") %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render "shared/error_messages" %>
      <%= f.label :name, t("app.views.users.new.name") %>
      <%= f.text_field :name %>
      <%= f.label :email, t("app.views.users.new.email") %>
      <%= f.email_field :email %>
      <%= f.label :password, t("app.views.users.new.password") %>
      <%= f.password_field :password %>
      <%= f.label :password_confirmation, t("app.views.users.new.confir") %>
      <%= f.password_field :password_confirmation %>
      <%= f.text_field :birthday, class: "form-control" ,type: "date" %>
      <%= f.label :gender, t("app.views.users.new.gender") %>
      <%= f.select :gender, options_for_select([["Nam gioi"], ["Nu gioi"], ["Khac"]], :selected => :gender) %>
      <%= f.submit t("app.views.users.new.create"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
